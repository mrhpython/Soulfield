[Unit]
Description=Soulfield (Claude Aiden)
After=network.target

[Service]
WorkingDirectory=%h/Documents/dev/soulfield
EnvironmentFile=%h/Documents/dev/soulfield/.env
ExecStart=/usr/bin/node index.cjs
Restart=always
RestartSec=2
NoNewPrivileges=true
ProtectSystem=full
PrivateTmp=true

[Install]
WantedBy=default.target
